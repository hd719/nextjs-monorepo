{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "public/dist/**",
        ".vinxi/**"
      ],
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_API_HOST",
        "NEXT_PUBLIC_DEBUG",
        "CONTACT_PHONE",
        "CONTACT_EMAIL",
        "NEXT_PUBLIC_CONTACT_PHONE",
        "NEXT_PUBLIC_CONTACT_EMAIL",
        "NODE_ENV",
        "BETTER_AUTH_URL",
        "BETTER_AUTH_SECRET",
        "APP_URL",
        "LOG_LEVEL",
        "DATABASE_URL",
        "BARCODE_SERVICE_URL",
        "BARCODE_SERVICE_API_KEY",
        "VITE_USE_MOCK_BARCODE"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
